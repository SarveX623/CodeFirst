@{
}
@model List<Employee>
@if(TempData["msg"]!=null){

    @TempData["msg"]
}
<a  asp-controller="Emp" asp-action="AddEmp"> Add Emp</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th scope="col">Action</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.Id</th>
                <td>@d.Name</td>
                <td>@d.Email</td>
                <td>@d.Salary</td>
                <td><a class=" btn btn-sm btn-danger"  asp-action="DeleteEmp" asp-route-Id="@d.Id" onclick="return confirm('are u want to delete thie data') ">Delete</a></td>
                <td><a class=" btn btn-sm btn-warning" asp-action="EditEmp" asp-route-Id="@d.Id">Edit</a></td>
            </tr>
        }
